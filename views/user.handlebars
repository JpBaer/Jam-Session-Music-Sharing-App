<link rel="stylesheet" href="/css/userstyle.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

<body>

    <div class="container">
        <div class="logo">
            <a href="/home">
                <h1>Jam Session</h1>
            </a>
        </div>
        <p id="user-welcome">Welcome, <span class="username">{{username}}</span>!</p>
        <a href="/intro"><button class="logout-btn" id="logout">Log Out</button></a>
    </div>


    <div class="containerAside">
        <aside>
            <img id="profile-picture" src="{{profile_picture_url}}">
            <a href="/spotifylogin"><button class="btn btn-primary" id="spotify-button" type="submit">Connect to
                    Spotify</button></a><br>
            <h3>{{spotify_id}}</h3>
            <h4>{{followers}} followers on Spotify</h4>
            <h2><span class="sep-font2">Current Favorites: </span><span class="sep-font">Songs</span></h2>
            <hr>
            {{#each top_songs as |top_song|}}
            <p>{{top_song}}</p>
            {{/each}}
            <hr>
            <h2><span class="sep-font2">Current Favorites: </span><span class="sep-font">Artists</span></h2>
            {{#each top_artists as |top_artist|}}
            <p>{{top_artist}}</p>
            {{/each}}
        </aside>

        <div class="playlist-grid">
            {{#each playlists as |playlist|}}
            <div class="playlist-grid-item">
                <img src="{{playlist.image_url}}" alt="{{playlist.name}}">
                <div class="playlist-info">
                    <h3><a href="{{playlist.playlist_url}}" target="_blank">{{playlist.name}}</a></h3>
                    <p>{{playlist.description}}</p>
                    <div class="playlist-stats">
                        <div class="likes">
                            <button class="like-btn" data-playlist-id="{{playlist.id}}">
                                <i class="fa-sharp fa-regular fa-heart"></i>
                            </button>
                            <span class="num-likes">{{playlist.likes}}</span>
                        </div>
                        <div class="comments">
                            <button class="comment-btn" data-playlist-id="{{playlist.id}}">
                                <i class="fa-sharp fa-regular fa-comment"></i>
                            </button>
                            <span class="num-comments">{{playlist.comments}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>

</body>

<script src="/logout.js"></script>

</html>