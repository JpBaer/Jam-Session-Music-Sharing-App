<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/homepagestyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Monda&display=swap" rel="stylesheet">
    <title>Jam Session: Home</title>
</head>

<body>
    <div class="comment-popup">
        <div class="modal-header">
            <h3>Comments</h3>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <form class ="comment-form">
                <label for="comment">Add your comment:</label>
                <input id="comment" type ="text"n/>
                {{!-- <textarea id="comment" name="comment"></textarea> --}}
                <button type="submit">Submit</button>
            </form>
            <div class="comments-list">

            </div>
        </div>
    </div>


    <div class="container">
        <div class="logo">
            <h1>Jam Session</h1>
        </div>
        <p id="user-welcome">Welcome, <span class="username">{{username}}</span>!</p>
        {{#if logged_in}}
        <a href="/user/{{id}}"><button class="profile-btn">Profile</button></a>
        {{/if}}
        <a><button class="logout-btn" id="logout">Log Out</button></a>
    </div>

    <div class="containerAside">
        <aside>
            <h2><span class="sep-font">Today's Song Picks</span></h2>
            <hr>
            {{#each random_Songs.random_Songs as |randomSong|}}
            <p>{{randomSong}}</p>
            {{/each}}
            <hr>
            <h2><span class="sep-font">Today's Artist Picks</span></h2>
            {{#each random_Artists.random_Artists as |randomArtist|}}
            <p>{{randomArtist}}</p>
            {{/each}}
        </aside>

        <div class="playlist-grid">
            {{#each playlists as |playlist|}}
            <div class="playlist-grid-item">
                <img src="{{playlist.image_url}}" alt="{{playlist.name}}">
                <div class="playlist-info">
                    <h3><a href="{{playlist.playlist_url}}" target="_blank"><span
                                class="play-name">{{playlist.name}}</span></a></h3>
                    <p>{{playlist.description}}</p>
                    <div class="playlist-stats">
                        <div class="likes">
                            <button class="like-btn" data-playlist-id="{{playlist.playlist_id}}">
                                <i class="fa-sharp fa-regular fa-heart" data-playlist-id="{{playlist.playlist_id}}"></i>
                            </button>
                            <span class="num-likes">{{playlist.likes}}</span>
                        </div>
                        <div class="comments">
                            <button class="comment-btn" data-playlist-id="{{playlist.playlist_id}}">
                                <i class="fa-sharp fa-regular fa-comment"
                                    data-playlist-id="{{playlist.playlist_id}}"></i>
                            </button>


                            <span class="num-comments">{{playlist.comments}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="/logout.js"></script>

    <script src="/likebutton.js"></script>
    <script src="/comments.js"></script>

